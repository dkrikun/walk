#!/bin/bash

target=$2

deps() {
  # Depend on all *.sass files, in case there are imports. In reality, it
  # would be nice if sass would tell us what a files dependencies were here.
  find . -type f -iname '*.sass'
}

convert() {
  sass ${target%.css}.sass > $target
}

case $1 in
  deps) deps ;;
  exec) convert ;;
esac
